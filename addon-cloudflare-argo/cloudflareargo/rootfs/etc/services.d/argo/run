#!/usr/bin/with-contenv bashio
# ==============================================================================
# Community Hass.io Add-ons: Node-RED
# Starts Node-RED
# ==============================================================================
declare -a options
declare certificate 
declare cf-cred


cf-cred=$(bashio::config 'cf-cred')
certificate=$(bashio::config 'certificate')


bashio::log.info "Starting CloudFlare Argo"

# / Check URL
exec /opt/cloudflared --origincert=${certificate} --cred-file=/config/cf-ha.json cloudflared tunnel run homeassistant

Sleep 120
