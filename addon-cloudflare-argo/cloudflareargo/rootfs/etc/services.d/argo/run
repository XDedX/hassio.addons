#!/usr/bin/with-contenv bashio
# ==============================================================================
# Community Hass.io Add-ons: Node-RED
# Starts Node-RED
# ==============================================================================
declare -a options
declare certificate 
declare cfconfig


cfconfig=$(bashio::config 'cfconfig')
certificate=$(bashio::config 'certificate')


bashio::log.info "Starting CloudFlare Argo"

# / Check URL
exec /opt/cloudflared --origincert=${certificate} tunnel --config=${cfconfig} run

Sleep 15
