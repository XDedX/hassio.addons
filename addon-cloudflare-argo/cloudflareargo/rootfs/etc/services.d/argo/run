#!/usr/bin/with-contenv bashio
# ==============================================================================
# Community Hass.io Add-ons: Node-RED
# Starts Node-RED
# ==============================================================================
declare -a options
declare certificate 
declare cfcred


cfcred=$(bashio::config 'cfcred')
certificate=$(bashio::config 'certificate')


bashio::log.info "Starting CloudFlare Argo"

# / Check URL
exec /opt/cloudflared --origincert=${certificate} --cred-file=${cfcred} tunnel run

Sleep 15
